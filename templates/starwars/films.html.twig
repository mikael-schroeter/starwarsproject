{% extends 'base.html.twig' %}

{% block title %}Starwars Project{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Starwars film details!</h1>

    {{ content['title'] }}
    <ul>
        {% for key, value in content[1:] %}
            {% if value is iterable  %}
                <li> {{ key }}
                    <ul>
                        {% for index, value in value %}
                            {% if key == "characters"  %}
                                <li><a href="http://localhost:8080/starwars/people/{{ value|split('/')[5] }}">{{ index }}: {{ value }}</a></li>
                            {% elseif key == "planets" %} 
                                <li><a href="http://localhost:8080/starwars/planets/{{ value|split('/')[5] }}">{{ index }}: {{ value }}</a></li>
                            {% elseif key == "starships" %} 
                                <li><a href="http://localhost:8080/starwars/starships/{{ value|split('/')[5] }}">{{ index }}: {{ value }}</a></li>
                            {% elseif key == "vehicles" %} 
                                <li><a href="http://localhost:8080/starwars/vehicles/{{ value|split('/')[5] }}">{{ index }}: {{ value }}</a></li>
                            {% elseif key == "species" %} 
                                <li><a href="http://localhost:8080/starwars/species/{{ value|split('/')[5] }}">{{ index }}: {{ value }}</a></li>    
                            {% else %} 
                                <li>{{ index }}: {{ value }}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </li>    
            {% else %}    
                <li>{{ key }}: {{ value }}</li>
            {% endif %}
        {% endfor %}
    </ul>
    <a href="javascript:history.back()">
        <button type="button" class="btn btn-primary">Back</button>
    </a>
    <a href="http://localhost:8080/starwars/planets">
        <button type="button" class="btn btn-primary">back to all planets</button>
    </a>
</div>
{% endblock %}
